<Page x:Class="XMCL.Pages.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XMCL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4" Loaded="Page_Loaded">
    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#6ec6ff"/>
        <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#0069c0"/>
        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#2196f3"/>
    </Page.Resources>
    <Grid Background="{DynamicResource PrimaryHueMidBrush}">
        <TextBlock Text="XcubeLauncher" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="64" Foreground="White" FontFamily="Consolas"/>
        <StackPanel Margin="15,10,10,10" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Label x:Name="Label1" Content="Loading" Foreground="White" FontFamily="Consolas"/>
            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Foreground="White" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
