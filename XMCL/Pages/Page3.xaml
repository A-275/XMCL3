<Page x:Class="XMCL.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:XMCL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="796"
      Title="Page3" Background="#99000000">

    <materialDesign:Card Margin="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="63*"/>
            </Grid.RowDefinitions>
            <Border Margin="0,39,0,0" Height="1">
                <Border.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </Border.Background>
            </Border>
            <Label Content="最近的下载项" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
            <StackPanel Orientation="Vertical" x:Name="List" Margin="0" Grid.Row="1"/>
        </Grid>
    </materialDesign:Card>
</Page>
